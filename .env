# =================================
# בוט שומר קבצי קוד - משתני סביבה
# Code Keeper Bot - Environment Variables
# =================================

# העתק קובץ זה ל-.env ומלא את הערכים הנדרשים
# Copy this file to .env and fill in the required values

# =================================
# הגדרות חובה (REQUIRED SETTINGS)
# =================================

# טוקן הבוט מ-BotFather
# Bot token from BotFather
BOT_TOKEN=your_bot_token_here

# כתובת מסד הנתונים MongoDB
# MongoDB connection string
# דוגמאות:
# MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/database
# Local MongoDB: mongodb://localhost:27017/code_keeper_bot
MONGODB_URL=mongodb://localhost:27017/code_keeper_bot

# =================================
# הגדרות מסד נתונים (DATABASE SETTINGS)
# =================================

# שם מסד הנתונים (ברירת מחדל: code_keeper_bot)
DATABASE_NAME=code_keeper_bot

# =================================
# אינטגרציות חיצוניות (EXTERNAL INTEGRATIONS)
# =================================

# GitHub Personal Access Token לשיתוף ב-Gist
# יצירת טוקן: https://github.com/settings/tokens
# הרשאות נדרשות: gist
GITHUB_TOKEN=your_github_token_here

# Pastebin API Key לשיתוף ב-Pastebin
# רישום: https://pastebin.com/doc_api
PASTEBIN_API_KEY=your_pastebin_api_key_here

# =================================
# הגדרות ביצועים (PERFORMANCE SETTINGS)
# =================================

# מקסימום גודל קטע קוד (bytes)
# Maximum code snippet size in bytes
MAX_CODE_SIZE=100000

# מקסימום קבצים למשתמש
# Maximum files per user
MAX_FILES_PER_USER=1000

# מקסימום גודל גיבוי (bytes)
# Maximum backup size in bytes
MAX_BACKUP_SIZE=104857600

# =================================
# הגדרות מראה (APPEARANCE SETTINGS)
# =================================

# ערכת נושא להדגשת תחביר
# Syntax highlighting theme
# אפשרויות: github-dark, monokai, solarized-dark, vs, xcode
HIGHLIGHT_THEME=github-dark

# שפת ברירת מחדל
# Default language
DEFAULT_LANGUAGE=he

# =================================
# הגדרות בטיחות (SECURITY SETTINGS)
# =================================

# רשימת משתמשי מנהל (מופרדים בפסיקים)
# Admin user IDs (comma separated)
ADMIN_USER_IDS=

# הפעלת מצב דיבוג
# Enable debug mode
DEBUG=false

# רמת לוגים
# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# קובץ לוגים
# Log file path (empty = console only)
LOG_FILE=

# =================================
# הגדרות שרת (SERVER SETTINGS)
# =================================

# פורט שרת (לשימוש עם webhooks)
# Server port (for webhook usage)
PORT=8000

# כתובת שרת חיצונית (לשימוש עם webhooks)
# External server URL (for webhook usage)
WEBHOOK_URL=

# סוד webhook (ביטחון נוסף)
# Webhook secret (additional security)
WEBHOOK_SECRET=

# =================================
# הגדרות Redis (אופציונלי)
# REDIS SETTINGS (OPTIONAL)
# =================================

# כתובת Redis לקאש
# Redis URL for caching
REDIS_URL=redis://localhost:6379/0

# פג תוקף קאש (שניות)
# Cache TTL in seconds
CACHE_TTL=300

# =================================
# הגדרות email (אופציונלי)
# EMAIL SETTINGS (OPTIONAL)
# =================================

# הגדרות SMTP לשליחת התראות
# SMTP settings for notifications
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=

# =================================
# הגדרות ענן (CLOUD SETTINGS)
# =================================

# Render.com Settings
# Render auto-detects many settings, but you can override:
RENDER_EXTERNAL_URL=https://your-app-name.onrender.com
RENDER_INTERNAL_URL=http://localhost:10000

# MongoDB Atlas (מומלץ לRender)
# MongoDB Atlas connection (recommended for Render)
# דוגמה: mongodb+srv://username:password@cluster.mongodb.net/database
MONGODB_ATLAS_URL=

# AWS S3 לאחסון קבצים (אופציונלי)
# AWS S3 for file storage (optional)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=
AWS_REGION=us-east-1

# Google Cloud Storage (אופציונלי)
# Google Cloud Storage (optional)
GOOGLE_CLOUD_PROJECT=
GOOGLE_APPLICATION_CREDENTIALS=

# =================================
# הגדרות פיתוח (DEVELOPMENT SETTINGS)
# =================================

# מצב פיתוח
# Development mode
DEVELOPMENT=false

# הפעלת פרופיילינג
# Enable profiling
ENABLE_PROFILING=false

# מקסימום זמן timeout לפעולות (שניות)
# Maximum timeout for operations in seconds
OPERATION_TIMEOUT=30

# =================================
# הגדרות גיבוי אוטומטי (AUTO BACKUP SETTINGS)
# =================================

# הפעלת גיבוי אוטומטי
# Enable automatic backups
AUTO_BACKUP_ENABLED=false

# תדירות גיבוי (שעות)
# Backup frequency in hours
BACKUP_FREQUENCY_HOURS=24

# שמירת גיבויים מקסימלית
# Maximum backups to keep
MAX_BACKUPS_TO_KEEP=7

# =================================
# הגדרות התראות (NOTIFICATION SETTINGS)
# =================================

# הפעלת התראות
# Enable notifications
NOTIFICATIONS_ENABLED=true

# ערוץ התראות Telegram (אופציונלי)
# Telegram notifications channel (optional)
NOTIFICATIONS_CHAT_ID=

# =================================
# הגדרות מתקדמות (ADVANCED SETTINGS)
# =================================

# מקסימום workers אסינכרוניים
# Maximum async workers
MAX_WORKERS=10

# מקסימום connections למסד נתונים
# Maximum database connections
MAX_DB_CONNECTIONS=20

# הפעלת compression לגיבויים
# Enable compression for backups
BACKUP_COMPRESSION=true

# רמת compression (1-9)
# Compression level (1-9)
COMPRESSION_LEVEL=6

# =================================
# הגדרות ניטור (MONITORING SETTINGS)
# =================================

# Sentry DSN לניטור שגיאות (אופציונלי)
# Sentry DSN for error monitoring (optional)
SENTRY_DSN=

# הפעלת מדדי ביצועים
# Enable performance metrics
ENABLE_METRICS=false

# =================================
# דוגמאות קונפיגורציה (CONFIGURATION EXAMPLES)
# =================================

# דוגמה לסביבת פיתוח:
# Development environment example:
# BOT_TOKEN=1234567890:ABCdefGHIjklMNOpqrSTUvwxYZ
# MONGODB_URL=mongodb://localhost:27017/code_keeper_bot_dev
# DEBUG=true
# LOG_LEVEL=DEBUG

# דוגמה לסביבת ייצור:
# Production environment example:
# BOT_TOKEN=your_production_bot_token
# MONGODB_URL=mongodb+srv://user:pass@cluster.mongodb.net/code_keeper_bot
# GITHUB_TOKEN=ghp_your_github_token
# PASTEBIN_API_KEY=your_pastebin_key
# DEBUG=false
# LOG_LEVEL=INFO
# LOG_FILE=logs/bot.log

# =================================
# הערות חשובות (IMPORTANT NOTES)
# =================================

# 1. אל תעלה את קובץ .env לגיט!
#    Never commit .env file to git!

# 2. הוסף את .env ל-.gitignore
#    Add .env to .gitignore

# 3. השתמש בסיסמאות חזקות
#    Use strong passwords

# 4. החלף טוקנים באופן קבוע
#    Rotate tokens regularly

# 5. לבדיקת הגדרות: python -c "from config import config; print(config)"
#    To test settings: python -c "from config import config; print(config)"
