[flake8]
max-line-length = 140
extend-ignore = E203, W503, W605, E501, E401, F401, F541, F811, F841, E722
exclude = .git, __pycache__, build, dist, .venv, venv, .mypy_cache, .pytest_cache
per-file-ignores =
    __init__.py:F401
    conversation_handlers.py:F811,E402
    get-pip.py:E402
    main.py:E501